# i3status config

general {
        colors = true
        interval = 5
}

# layout

order += "memory"
order += "volume master"
order += "battery all"
order += "tztime local"

# config

memory {
  format = "MEM: %used "
}

volume master {
	format = " VOLUME: [%volume] "
	format_muted = " VOLUME: muted (%volume) "
	device = "default" 
}

battery all {
        format = " %status: [%percentage] "
	integer_battery_capacity = true
}

tztime local {
        format = " DAY: [%a]  DATE: [%d-%m-%Y]  TIME: [%I:%M] "
}
